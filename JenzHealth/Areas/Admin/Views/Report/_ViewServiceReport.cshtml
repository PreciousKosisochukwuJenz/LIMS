<div class="modal fade" id="ViewMore" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">View Billed Services</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div style="overflow-x: auto;">
                    <table class="file-manager file-manager-list2 d-none table-responsive">
                        <thead class="bg-light">
                            <tr>
                                <th scope="col" class="border-0">Service</th>
                                <th scope="col" class="border-0">Quantity</th>
                                <th scope="col" class="border-0">Price (₦)</th>
                                <th scope="col" class="border-0">Gross Amount (₦)</th>
                            </tr>
                        </thead>
                        <tbody id="ServiceBody">
                        </tbody>
                        <tfoot style="border-top: 2px solid black; border-bottom: 2px solid black;background-color:#dcdfe1" class="text-center">
                            <tr>
                                <th colspan="2"></th>
                                <th> Net Amount (₦)</th>
                                <td id="NetAmount">₦0.00</td>
                            </tr>
                            <tr>
                                <th colspan="2"></th>
                                <th>Waived Amount (₦)</th>
                                <td id="WaiveAmount">₦0.00</td>
                            </tr>
                            <tr>
                                <th colspan="2"></th>
                                <th>Total Paid Amount (₦)</th>
                                <td id="PaidAmount">₦0.00</td>
                            </tr>
                            <tr>
                                <th colspan="2"></th>
                                <th> Balance Amount (₦)</th>
                                <td id="BalanceAmount">₦0.00</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-block" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>



